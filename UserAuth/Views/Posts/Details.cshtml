@model UserAuth.Models.Posts

@{
    ViewData["Title"] = "Details";

}
@using Microsoft.AspNetCore.Identity
@using UserAuth.Areas.Identity.Data

@inject SignInManager<MinervaUser> SignInManager
@inject UserManager<MinervaUser> UserManager



@if (SignInManager.IsSignedIn(User))
{
    <h1>Details</h1>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h1 class="card-title">@Model.PostName</h1>
                </div>
                <div class="card-body">
                    <h5 class="card-title text-black-50">@Model.PostDescription</h5>
                    <div class="card-text">
                        @Html.Raw(Model.Content)
                    </div>
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.PostId">Edit</a> 
                    <a class="btn btn-outline-primary" asp-action="Index">Back to List</a>
                </div>
                <div class="card-footer text-muted">
                    @Model.TimeStamp;
                </div>
            </div>
        </div>
    </div>
   
}
